<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="item_grid">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@color/blackOpaque</item>
    </style>
    <style name="grid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnCount">2</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="card_view" parent="CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
    <style name="edit_text_item" parent="item_grid">
        <item name="android:gravity">center|start</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources>